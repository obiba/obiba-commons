<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date - %-5level - %logger - %message%n</pattern>
    </encoder>
  </appender>

  <logger name="org.obiba" level="info"/>

  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>